<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="kroam.tournamentmaker"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".activities.Tournaments_Teams_TabActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Schedule_Result_TabActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activities.Tournaments_Teams_TabActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activities.TournamentCreateActivity"
            android:parentActivityName=".activities.Tournaments_Teams_TabActivity">
        </activity>
        <activity
            android:name=".activities.TeamCreateActivity"
            android:parentActivityName=".activities.Tournaments_Teams_TabActivity">
        </activity>
    </application>

</manifest>
