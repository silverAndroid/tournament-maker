<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:layout_toLeftOf="@+id/home_team_win_stat"
        android:text="Brazil"
        android:textColor="#000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="-"
        android:textColor="#000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/home_team_win_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/dash"
        android:text="7"
        android:textColor="#000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/away_team_win_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/dash"
        android:text="1"
        android:textColor="#000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/away_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:gravity="right"
        android:layout_toRightOf="@+id/away_team_win_stat"
        android:text="Germany"
        android:textColor="#000"
        android:textSize="16sp"/>
</RelativeLayout>